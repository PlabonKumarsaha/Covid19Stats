            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" -"
            android:textSize="16dp"
            android:textColor="#151212"
            android:textAlignment="textEnd"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
