<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="#F3EFEF"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="15sp"
            android:id="@+id/countryTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country Name"
            android:textSize="18dp"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            />
        <TableLayout
            android:layout_below="@+id/countryTV"
            android:id="@+id/countryTL"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_weight="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cases"
                    android:textSize="17sp"
                    android:textColor="#171616"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/caseTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:paddingStart="10dp"
                    android:textSize="17sp"
                    android:textColor="#171616"
                    />
            </TableRow>

            <TableRow
                android:layout_weight="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today Cases"
                    android:textSize="17sp"
                    android:textColor="#171616"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/todayCaseTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:paddingStart="10dp"
                    android:textSize="17sp"
                    android:textColor="#171616"
                    />
            </TableRow>

            <TableRow
                android:layout_weight="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Death"
                    android:textSize="17sp"
                    android:textColor="#E81212"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/deathTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:paddingStart="10dp"
                    android:textSize="17sp"
                    android:textColor="#171616"
                    />
            </TableRow>

            <TableRow
                android:layout_weight="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today Death"
                    android:textSize="17sp"
                    android:textColor="#E81212"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/todayDeathTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:paddingStart="10dp"
                    android:textSize="17sp"
                    android:textColor="#171616"
                    />
            </TableRow>

            <TableRow
                android:layout_weight="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recovered"
                    android:textSize="17sp"
                    android:textColor="#3FDD45"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/recoveredTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:paddingStart="10dp"
                    android:textSize="17sp"
                    android:textColor="#171616"
                    />
            </TableRow>

            <TableRow
                android:layout_weight="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Recovered"
                    android:textSize="17sp"
                    android:textColor="#3FDD45"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/totalrecoveredTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:paddingStart="10dp"
                    android:textSize="17sp"
                    android:textColor="#171616"
                    />
            </TableRow>



        </TableLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>